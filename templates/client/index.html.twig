{% extends 'base.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript" src="{{ asset("js/ClientInfo.js") }}"></script>

{% endblock %}

{% block body %}

    {% include 'header.html.twig' %}
    {% include 'menu-user.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            {% include 'menu-company.html.twig' %}

            <div class="col-md-9 col-lg-10">
                <div class="container main-container">
                    <div class="row flex-xl-nowrap">
                        <div class="panel panel-table" id="sect">
                            <div class="panel-heading">
                                <h3>Mis Clientes</h3>
                                <a href="{{ path('addNewClient', {id: company_id}) }}"><button><i class="fas fa-plus"></i></button></a>
                            </div>
                            <div class="panel-search">
                                <form action="{{ path('search', {id: company_id})}}" method="POST" id="search">
                                    <div class="form-group">
                                        <label class="control-label" for="buscador">Buscar cliente</label>
                                        <input class="form-control" type="search" id="buscador" name="buscador" placeholder=" Buscar...">
                                    </div>
                                    <div class="form-actions">
                                        <button class="btn btn-primary" type="submit" >Buscar</button>
                                    </div>    
                                </form>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Cliente</th>
                                        <th width="75px" scope="col">Editar</th>
                                        <th width="75px" scope="col">Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set counter = 0 %}
                                    {% for clients in client %}
                                        {% set counter = counter + 1 %}
                                        <tr>
                                            <th>{{ counter }}</th>
                                            <td><a id="oneClient" href="{{ path('show', {id:clients.id}) }}">{{ clients.name }}</a></td>
                                            <td><a href="{{ path('editar', {id_client: clients.id, id: company_id}) }}"><button name="edit" class="edit"><i class="fas fa-edit"></i></button></a></td>
                                            <td><a href="{{ path('delete', {id: clients.id}) }}"><button name="delete" class="delete"><i class="far fa-trash-alt"></i></button></a></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% block footer_javascripts %}
        
        <script src="{{ asset("js/menu-company.js") }}"></script>

    {% endblock %}

{% endblock %}











