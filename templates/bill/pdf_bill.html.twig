<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Pdf Factura Fácil{% endblock %}</title>
</head>
<body>
    {% block body %}

        <table id="table-invoice">
            <thead>
                <tr>
                    <th scope="col">Importe I.V.A.</th>
                    <th scope="col">Importe sin I.V.A.</th>
                    <th scope="col">Importe Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ bill.amountIVA }}€</td>
                    <td>{{ bill.amountWithoutIVA }}€</td>
                    <td>{{ bill.totalInvoiceAmount }}€</td>
                </tr>
            </tbody>
        </table>
        
        <h2>Líneas de factura</h2>
        
        <table id="table-invoice-lines">
            <tr>
                <th scope="col">Descripción</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
                <th scope="col">IVA</th>
                <th scope="col">Subtotal</th>
            </tr>
            {% for billLine in bill.billLines %}
                <tr>
                    <td>{{ billLine.description }}</td>
                    <td>{{ billLine.quantity }}</td>
                    <td>{{ billLine.price }}€</td>
                    <td>{{ billLine.billLineIva }}%</td>
                    <td>{{ billLine.subTotal }}€</td>
                </td>
            {% endfor %}
        </table>
    
    {% endblock %}
</body>
</html>